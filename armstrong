.................................... [Armstrong num] .....................................


#include <iostream>
#include <cmath>
using namespace std;

int main() {
    int n, digit=0, sum=0;
    
    cout<<"enter the number to check wheather it is a Armstong number"<<endl;
    cin>>n;
    
    int temp=n;
    while (temp!=0)
    {
        temp/=10;
        digit++;
    }
    
    int x=n;
    while (x!=0)
    {
        sum+=pow(x%10,digit);
        x/=10;
    }

    if (n==sum) {cout <<"it is a Armstong Number"<<endl;}
    else {cout <<"it is not a Armstong Number"<<endl;}
    
    return 0;
}





........................... [Armstrong between two num] ..................................


#include<iostream>
#include<cmath>
using namespace std;

int main(){
    int a,b;
    cout<< "Enter the lower & upper limits: ";
    cin>>a>>b;

    cout<< "Armstrong Numbers are: ";
    for(int i=a; i<=b; i++){
        int sum=0, digit=0;

        int temp=i;
        while(temp!=0){
            digit++;
            temp/=10;
        }

        int x=i;
        while(x!=0){
            sum+=pow(x%10,digit);
            x/=10;
        }
        if(sum==i)
        cout<< i << "\t";
    }
}
