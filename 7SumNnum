................................... [SUM OF n NUMBERS] ...................................

//[sum of n numbers from a to b]......................


#include <iostream>
using namespace std;

int main(){
    int a,b;
    cout<<"Enter the lower and upper limit"<<endl;
    cin>>a>>b;

    int sum = 0;
    for(int i = a; i <= b; i++) {
        sum+=i;
    }

    cout<<"The sum of all the numbers from "<<a<<" to "<<b<<" is "<<sum<<endl;
}






//[sum of first n natural numbers]....................

#include <iostream>
using namespace std;

int main(){
    int n, sum=0;
    cout<< "Enter the number: ";
    cin>>n;

    for(int i=1; i<=n; i++){
        sum+=i;
    }
    cout<<"the Sum of first "<< n <<" numbers is: "<< sum;
}
