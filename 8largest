................................ [largest of 3 numbers] ...................................


#include <iostream>
using namespace std;

int main(){
    float n1,n2,n3,largest;
    cout <<"Enter three Numbers for comparison: ";
    cin>>n1>>n2>>n3;

    if(n1>n2 && n1>n3){
        largest=n1;
    }
    else if(n2>n1 && n2>n3){
        largest=n2;
    }
    else if(n3>n1 && n3>n2){
        largest=n3;
    }

    cout<<"the Largest Number is: "<<largest;
}

